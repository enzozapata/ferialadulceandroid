<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.enzozapata.ladulce.activity_post"
    tools:showIn="@layout/app_bar_main2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical
">
    <ImageView
        android:id="@+id/imgVerPost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/loading" />

    <TextView
        android:id="@+id/txtTituloPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgVerPost"
        android:text="Titulo de la publicacion"
        android:textSize="24dp"/>

        <TextView
            android:id="@+id/txtFechaPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgVerPost"
            android:text="Fecha pub."
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/txtPrecioPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgVerPost"
            android:text="Precio pub."
            android:textSize="18dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
